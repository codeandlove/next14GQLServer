// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  previewFeatures = ["fullTextSearch"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id              String @id @default(cuid())
  name            String
  slug            String
  description     String
  longDescription String
  price           Int
  image           String
  status          String
  rating          Int
  
  cartItems       CartItem[]
  carts           Cart[]
  categories      Category[]
  collections     Collection[]
  order           Order[]
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([slug])
}

model Cart {
  id          String @id @default(cuid())
  items       Product[]
}

model Category {
  id          String @id @default(cuid())
  name        String
  slug        String 
  description String
  products    Product[]

  @@unique([slug])
}

model Collection {
  id          String @id @default(cuid())
  name        String
  slug        String 
  description String
  products    Product[]

  @@unique([slug])
}

model Order {
  id          String @id @default(cuid())
  products    Product[]
  totalAmount Int
  status      OrderStatus
  lines       String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model CartItem {
  id          String @id @default(cuid())
  product     Product[]
  quantity    Int
}

enum OrderStatus {
  PAID
	FULFILLED
	CREATED
	CANCELLED
}
